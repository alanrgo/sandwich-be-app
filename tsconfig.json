{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,      
    "lib": [ 
      "es6", 
      "dom" 
    ],
    "types": [
      "node", "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/express", 
      "./src/lib/typings/nodejs.d"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}